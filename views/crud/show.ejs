<% layout('layouts/boilerplate.ejs') %>

<div id="map" style="width: 100%; height: 400px;"></div>

<script>
    const cGrounds = {features: <%-JSON.stringify(campgrounds)%>}
</script>

<h1>Available Grounds</h1>
<hr>
<% for(let camp of campgrounds) {%>
<a style="text-decoration: none; color:inherit" href="campgrounds/<%= camp.id %>">
    <div class="card mb-2">
        <div class="row ">
            <div class="col md-2">
                <% for (img of camp.images) { %>
                <img class="img-fluid small-image" src="<%= img.url%>" alt="campground">
                <% break } %>
            </div>
            <div class="col-md-10">
                <div class="card-body">
                    <h5 class="card-title"><%= camp.title %></h5>
                    <p class="card-text text-body-secondary">
                        <%= camp.location %> 
                    </p>
                    <p class="card-title">
                        <small class="card-title">
                            <%= camp.description%>
                        </small>
                    </p>
                </div>
            </div>
        </div>
    </div>
</a>
<% } %>

<script>
    const mapToken = '<%-process.env.PUBLICMAP_TOKEN%>'
</script>
<script src="/javascripts/clusterMap.js"></script>